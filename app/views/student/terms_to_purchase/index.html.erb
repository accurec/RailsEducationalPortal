<h1>Available Terms to Purchase</h1>

<% @terms.each do |term| %>
    <div>
        <span><%= term.name %> | </span>
        <%= button_to "Purchase with credit card", destroy_user_session_path, method: :post, form: { style: 'display: inline;' } %> 
        <%= button_to "Purchase with license code", destroy_user_session_path, method: :post, form: { style: 'display: inline;' } %>
    </div>
    <p></p>
<% end %>